{% extends "@api_email/base.html.twig" %}
{% block title %}{{ subject }}{% endblock %}
{% block content %}
    <p>Customer: {{ body.customer }}</p>
    <p>Code: {{ body.code }}</p>
    {% if body.file is defined %}<p>File: {{ body.file }}</p>{% endif %}
    {% if body.line is defined %}<p>Line: {{ body.line }}</p>{% endif %}
    <p>Message: {{ body.message }}</p>
{% endblock %}
