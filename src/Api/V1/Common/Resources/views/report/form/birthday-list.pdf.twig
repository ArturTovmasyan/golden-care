{% extends '@api_report/base.twig' %}
{% block pageTitle %}{% endblock %}
{% block pageContent %}
    {% for type in data.types %}

        <div class="page"></div>
        <table class="report-table main-table">
            <tbody>
                <tr style="page-break-inside: initial !important;">
                    <th colspan="3">
                        <div style="margin-bottom: 5px;">
                            <div style="float: left">
                                <div style="height: 5px;"></div>
                                <b style="font-size: 18px !important">BIRTHDAY&nbsp;LIST</b>
                                <p style="margin-bottom: 5px;"></p>
                                <b style="font-size: 16px !important">{{ type['name'] }}</b>
                            </div>
                            <div style="clear: both"></div>
                        </div>
                    </th>
                </tr>
                <tr style="page-break-inside: initial !important;">
                    <td style="border-bottom: solid 1px darkgray !important; text-align: center;"><b style="font-size: 13px !important;">Birthday</b></td>
                    <td style="border-bottom: solid 1px darkgray !important; text-align: left; padding-left: 80px; width: 250px !important;"><b style="font-size: 13px !important;">Resident</b></td>
                    <td style="border-bottom: solid 1px darkgray !important; text-align: left;"><b style="font-size: 13px !important;">Age on Next Birthday</b></td>
                </tr>

                {% if type.dates is not empty %}
                    <tr>
                        <td colspan="3">
                            {% for monthData in type.dates %}

                                <div style="font-size: 13px !important; margin-bottom: 10px;">{{ monthData['name'] }}</div>

                                {% if monthData.birthdays is defined and monthData['birthdays'] is not empty %}
                                    {% for birthdayData in monthData.birthdays %}
                                        <div style="font-size: 13px !important; margin-bottom: 10px;">
                                            <div style="float: left; margin-left: 40px;">{{ birthdayData['day'] }}</div>
                                            <div style="float: left; width: 250px !important; margin-left: 100px;">{{ birthdayData['name'] }}</div>
                                            <div style="float: left; margin-left: 70px; text-align: left">{{ birthdayData['age'] }}</div>
                                            <div style="clear: both"></div>
                                        </div>
                                    {% endfor %}
                                {% endif %}

                            {% endfor %}
                        </td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    {% endfor %}

{% endblock %}
{% block pageFooter %}
{% endblock %}