{% extends '@api_report/base.twig' %}
{% block pageTitle %}
    <span style="float: left; width: 400px">{{ data.title }}</span>
{% endblock %}
{% block pageContent %}

    {% set renderedGroup = null %}
    {% set newGroup = false %}
    {% for resident in data.residents %}
        {% if renderedGroup == resident.typeId %}
            {% set newGroup = false %}
        {% else %}
            {% set renderedGroup = resident.typeId %}
            {% set newGroup = true %}
        {% endif %}


        {% if newGroup %}
            <span class="divider"></span>
            <span class="divider"></span>
            <table class="report-table main-table bordered">
            <tr class="divider"></tr>
            <thead>
            <tr>
                <th colspan="8">
                    <div style="float: left">
                        <h3>{{ resident.typeName }}</h3>
                    </div>
                </th>
            </tr>
            <tr>
                <td></td>
                <td><b>DATE</b></td>
                <td><b>WEIGHT</b></td>
                <td><b>BLOOD PRESSURE</b></td>
                <td><b>CAREGIVER</b></td>
            </tr>
            </thead>
            <tbody>
        {% endif %}

        <tr>
            <td style="height: 50px; text-align: left; vertical-align: middle">
                {% if resident.roomNumber is defined and resident.bedNumber is defined %}
                    {% if resident.private %}
                        {{ resident.roomNumber }}&nbsp;<br/>
                    {% else %}
                        {{ resident.roomNumber ~ ' ' ~ resident.bedNumber }}<br/>
                    {% endif %}
                {% endif %}{{ resident.firstName ~ ' ' ~ resident.lastName }}
            </td>
            <td style="height: 50px"></td>
            <td style="height: 50px"></td>
            <td style="height: 50px; width: 150px; padding: 0; background: #ffffff url('data:image/png;base64,') no-repeat center center"></td>
            <td style="height: 50px"></td>
        </tr>

    {% endfor %}

    {% if not newGroup %}
        </tbody>
        </table>
    {% endif %}

    <table class="report-table main-table">
        <tr class="divider"></tr>
    </table>

{% endblock %}
{% block pageFooter %}
{% endblock %}