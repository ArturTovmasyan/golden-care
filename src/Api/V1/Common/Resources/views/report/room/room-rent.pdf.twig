{% extends '@api_report/base.twig' %}
{% block pageTitle %}
{% endblock %}
{% block pageContent %}

    {% set renderedGroup = null %}
    {% set newGroup = false %}
    {% set i = false %}
    {% for datumKey, datum in data.data %}
        {% set i = true %}
        {% if renderedGroup == datum.typeId %}
            {% set newGroup = false %}
        {% else %}
            {% set renderedGroup = datum.typeId %}
            {% set newGroup = true %}
        {% endif %}

        {% if newGroup %}
            <div class="page"></div>
            <span class="divider"></span>
            <span class="divider"></span>
            <table class="report-table main-table bordered" style="margin-bottom: 10px;">
            <tr class="divider"></tr>
            <thead>
            <tr>
                <th colspan="10">
                    <div style="margin-bottom: 5px; float: left">
                        <div style="float: left">
                            <div style="height: 5px;"></div>
                            <b style="font-size: 18px !important">{{ data.strategy }}&nbsp;{% if data.strategyId != constant('App\\Model\\GroupType::TYPE_REGION') %}Room&nbsp;{% endif %}Rent&nbsp;Report</b>
                            <p style="margin-bottom: 5px;"></p>
                            <b style="font-size: 14px !important">{{ data.strategy }}:&nbsp;{{ datum.typeName }}</b><br/>
                            <b style="font-size: 14px !important">{{ data.dateStart|date("m/d/Y") }}&nbsp;through&nbsp;{{ data.dateEnd|date("m/d/Y") }}</b>
                        </div>
                    </div>
                    <div style="margin-bottom: 5px; float: right">
                        <b style="font-size: 18px !important">
                            {% for key, sum in data.total %}
                                {% if key == renderedGroup %}
                                    Total:&nbsp;$&nbsp;{{ sum|number_format(2, '.', ',') }}
                                {% endif %}
                            {% endfor %}
                        </b>
                    </div>
                    <div style="clear: both"></div>
                </th>
            </tr>
            <tr>
                {% if datum.roomNumber is defined and datum.bedNumber is defined %}<td><b>Room/Bed</b></td>{% endif %}
                <td><b>Resident</b></td>
                <td><b>Billing</b></td>
                <td><b>Rent</b></td>
                <td><b>Frequency</b></td>
                <td><b>Admitted</b></td>
                <td><b>Discharged</b></td>
                <td><b>Days</b></td>
                <td><b>RentDue</b></td>
            </tr>
            </thead>
            <tbody>
        {% endif %}

        {% set k = 0 %}
        <tr>
            {% if datum.roomNumber is defined and datum.bedNumber is defined %}<td style="height: 40px; text-align: left;">{{ datum.roomNumber }}&nbsp;{{ datum.bedNumber }}</td>{% endif %}
            <td style="height: 40px; text-align: left;">{{ datum.firstName ~ ' ' ~ datum.lastName }}</td>
            <td style="height: 40px; text-align: left;">
                {% for responsiblePerson in data.responsiblePersons %}
                    {% if responsiblePerson.residentId == datum.id %}
                        {% if responsiblePerson.financially %}
                            {% set k = k + 1 %}
                            {% if responsiblePerson.firstName is defined and responsiblePerson.lastName is defined %}{{ responsiblePerson.firstName ~ ' ' ~ responsiblePerson.lastName }}{% if responsiblePerson.relationshipTitle is defined %}&nbsp;({{ responsiblePerson.relationshipTitle }}){% endif %}<br/>{% else %}N/A{% endif %}
                        {% endif %}
                    {% endif %}
                {% endfor %}
                {% if k == 0 %}
                    N/A
                {% endif %}
            </td>
            <td style="height: 40px; text-align: left;">
                {% if datum.amount is defined and datum.amount %}$&nbsp;{{ datum.amount|number_format(2, '.', ',') }}<br/>{% else %}$&nbsp;{{ 0|number_format(2, '.', ',') }}{% endif %}
            </td>
            <td style="height: 40px; text-align: left;">
                {% if datum.period is defined and datum.period %}{{ rentPeriod(datum.period) }}<br/>{% else %}N/A{% endif %}
            </td>
            <td style="height: 40px; text-align: left;">
                {% if datum.admitted is defined and datum.admitted %}{{ datum.admitted|date("m/d/Y") }}<br/>{% else %}N/A{% endif %}
            </td>
            <td style="height: 40px; text-align: left;">
                {% if datum.discharged is defined and datum.discharged %}{{ datum.discharged|date("m/d/Y") }}<br/>{% else %}N/A{% endif %}
            </td>
            <td style="height: 40px; text-align: left;">
                {% if data.calcAmount[datum.id] is defined and data.calcAmount[datum.id][datum.actionId] is defined %}{{ data.calcAmount[datum.id][datum.actionId].days }}<br/>{% else %}N/A{% endif %}
            </td>
            <td style="height: 40px; text-align: left;">
                {% if data.calcAmount[datum.id] is defined and data.calcAmount[datum.id][datum.actionId] is defined %}$ {{ data.calcAmount[datum.id][datum.actionId].amount|number_format(2, '.', ',') }}<br/>{% else %}$&nbsp;{{ 0|number_format(2, '.', ',') }}{% endif %}
            </td>
        </tr>
        {% if datumKey+1 == data.place[renderedGroup] %}
            <tr>
                <td colspan="10">
                    <div style="margin-bottom: 5px; float: right">
                        <b style="font-size: 20px !important">
                            {% for key, sum in data.total %}
                                {% if key == renderedGroup %}
                                    Total:&nbsp;$&nbsp;{{ sum|number_format(2, '.', ',') }}
                                {% endif %}
                            {% endfor %}
                        </b>
                    </div>
                </td>
            </tr>
        {% endif %}
    {% endfor %}

    {% if not newGroup %}
        </tbody>
        </table>
    {% endif %}

    {% if not i %}
        <b style="font-size: 18px !important">{{ data.dateStart|date("m/d/Y") }}&nbsp;through&nbsp;{{ data.dateEnd|date("m/d/Y") }} not any rents found.</b>
    {% endif %}

{% endblock %}
{% block pageFooter %}
{% endblock %}