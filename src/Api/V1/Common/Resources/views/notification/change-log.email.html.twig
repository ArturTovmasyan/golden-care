{% extends "@api_email/base.html.twig" %}
{% block title %}{{ subject }}{% endblock %}
    {% block content %}
        {% if logs|length > 0 %}
            {% for log in logs %}
                <table style="border-collapse:collapse;border-spacing:0" width="100%">
                    <tbody>
                    <tr>
                        <td>
                            <span style="font-size: 16px;">{{ log['action'] }} | </span><span style="font-size: 14px;">{{ log['title']|raw }}<br>
                            <span style="font-size: 14px;">Date : {{ log['date'] }}</span>
                            <br>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            {{ log['content']|raw}}
                            <br>
                            <br>
                        </td>
                    </tr>
                    </tbody>
                </table>
            {% endfor %}
        {% else %}
            <table style="border-collapse:collapse;border-spacing:0" width="100%">
                <tbody>
                <tr>
                    <td>
                        No user activity logged!
                    </td>
                </tr>
                </tbody>
            </table>
        {% endif %}
    {% endblock %}
