<html>
<head>
    <style>
        body {
            font-family: sans-serif;
        }

        pre {
            font-family: sans-serif;
            font-size: 10pt;
        }

        a {
            font-family: sans-serif;
            color: black;
            text-decoration: none;
        }

        table {
            width: 100%;
        }

        table td, table th {
            border-right: 1px solid gray;
            border-bottom: 1px solid gray;
            margin: 0;
            padding: 5px;
            font-size: 10pt;
        }

        table th {
            border-top: 1px solid gray;
            text-align: center;
            vertical-align: middle;
        }

        table tr:first-child td {
            border-top: 1px solid gray;
        }

        table td:first-child, table th:first-child {
            border-left: 1px solid gray;
        }

        section {
            margin-left: 50px;
            padding: 5px;
        }

        thead {
            display: table-header-group
        }

        tfoot {
            display: table-row-group
        }

        tr {
            page-break-inside: avoid
        }
    </style>
</head>
<body>
<h1>{{ title }}</h1>
<p>Date: {{ "now"|date("Y-m-d h:i:s") }}</p>
<table cellpadding="0" cellspacing="0">
    <thead>
    <tr>
        {% for field in fields %}
            <th>{{ field.id|trans }}</th>
        {% endfor %}
    </tr>
    </thead>
    <tbody>
    {% for item in data %}
        <tr>
            {% for field in fields %}
                {% if field.type == 'date' %}
                    <td>{{ item[field.id]|date("Y-m-d h:i:s") }}</td>
                {% else %}
                    <td>{{ item[field.id] }}</td>
                {% endif %}
            {% endfor %}
        </tr>
    {% endfor %}
    </tbody>
</table>
</body>
</html>